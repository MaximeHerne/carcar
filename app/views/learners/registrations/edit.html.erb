<!-- <h2>Edit <%= resource_name.to_s.humanize %></h2> -->

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= devise_error_messages! %>

<div class="container">
  <div class="row">

    <div class="col-xs-12">
      <h3>MON COMPTE</h3>
    </div>
  </div>
  <div class="row">
    <div class="col-xs-12">
      <ul class="list-inline">
        <li><%= link_to 'Mon planning', learners_path %></li>
        <li><%= link_to 'Données personnells', edit_learner_registration_path %></li>
        <li>Historique de mes leçons</li>
      </ul>
    </div>
  </div>
</div>

<div class="border_form">
<div class="container">
<div class="row">
<div class="col-xs-12 col-sm-offset-2 col-sm-8">
  <div class="form-group">
    <div class="field">
      <%= f.label :firs_name %><br />
      <%= f.text_field :firs_name, autofocus: true, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <div class="field">
      <%= f.label :last_name %><br />
      <%= f.text_field :last_name, autofocus: true, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <div class="field">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <div class="field">
      <%= f.label :date_of_birth %><br />
      <%= f.date_field :date_of_birth, autofocus: true, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <div class="field">
      <%= f.label :phone %><br />
      <%= f.text_field :phone, autofocus: true, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <div class="field">
      <%= f.label :address %><br />
      <%= f.text_field :address, autofocus: true, :class => "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <div class="field">
      <%= f.label :city %><br />
      <%= f.text_field :city, autofocus: true, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <div class="field">
      <%= f.label :zip %><br />
      <%= f.text_field :zip, autofocus: true, :class => "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <div class="field">
      <%= f.label :country %><br />
      <%= f.text_field :country, autofocus: true, :class => "form-control" %>
    </div>
  </div>
  <div class="field">
    <%= f.label :picture %>
    <%= f.file_field :picture %>
  </div>

                    <!-- Ici on ajoute les modifs -->


    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>
  <div class="form-group">
    <div class="field">
      <%= f.label :password %> <i>(leave blank if you don't want to change it)</i><br />
      <%= f.password_field :password, autocomplete: "off", :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <div class="field">
      <%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation, autocomplete: "off", :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <div class="field">
      <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br />
      <%= f.password_field :current_password, autocomplete: "off", :class => "form-control" %>
    </div>
  </div>
  <div class="actions">
    <%= f.submit "Update" %>
  </div>
<% end %>
</div>
</div>
</div>
</div>
<h3>Cancel my account</h3>

<p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>

<%= link_to "Back", :back %>

