<div class="light-grey-bg">
  <div class="container">
    <div class="row">

      <div class="col-xs-12">
        <h3>MON COMPTE</h3>
      </div>
    </div>
    <div class="row">
      <div class="col-xs-12">
        <ul class="list-inline">
          <li><%= link_to 'Mon planning', learner_path(@learner) %></li>
          <li><%= link_to 'Données personnells', edit_learner_registration_path %></li>
          <li>Historique de mes leçons</li>
        </ul>
      </div>
    </div>
  </div>
  <%= link_to "j'ajoute mon ecole", add_school_learner_path, :class => "btn btn-primary" %>


  <%= link_to "sign out", destroy_learner_session_path, method: :delete, :class => "btn btn-primary" %>


  Par mois
  <br> </br>
  <br> </br>
  <div class="col-xs-12 col-md-6">
    <div class="calendar" >
      <%= week_calendar do |date| %>
          <%= date.mday %>
      <% end %>
    </div>
  </div>





  <br>
  <br>
  <br>
  <br>
  <br><br><br>
  <br>
  <br><br>
  <br>

  <br>
  <br>
  <div class="col-xs-12 col-md-6">
    <table>
      <thead>
        <tr>
          <th>Starts at</th>
          <th>Ends at</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @lessons.each do |lesson| %>
          <tr>
            <td><%= lesson.starts_at %></td>
            <td><%= lesson.ends_at %></td>
            <td><%= link_to 'Show', lesson, :class => "btn btn-primary" %></td>
            <td><%= link_to 'Edit', edit_lesson_path(lesson), :class => "btn btn-primary" %></td>
            <td><%= link_to 'Destroy', lesson, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-primary" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <br>

  <%= link_to 'New Lesson', new_lesson_path, :class => "btn btn-primary" %>

  <%= image_tag @learner.picture.url(:medium) %>




  <br> </br>
  <br> </br>
  <div class="col-xs-12">
    <h3>Mes Moniteurs </h3>
    <% if @learner.school.nil? %>
    <% %>
    <% else %>
    <% @teachers.each do |teacher| %>
    <%= link_to teacher.name, teacher_path(teacher) %>
    <% end %>
    <%end %>
  </div>

  <br> </br>
  <br> </br>

  <%= form_tag(update_add_school_learner_path(@learner)) do %>
      <div class="form-group">
        <div class="field">
          <%= collection_select(:learner, :school_id, School.all, :id, :name, :class => "form-control") %>
        </div>
      </div>
      <button type="submit" class="btn btn-default">
        <div class="actions">
          <%= submit_tag %>
        </div>
      </button>
  <% end %>
</div>