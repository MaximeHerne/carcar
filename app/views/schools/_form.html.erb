<%= form_for(@school) do |f| %>
  <% if @school.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@school.errors.count, "error") %> prohibited this school from being saved:</h2>

      <ul>
      <% @school.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-offset-2 col-sm-8">
      <div class="form-group">
        <div class="field">
          <%= f.label :nom_auto_école %><br>
          <%= f.text_field :name, :class => "form-control" %>
        </div>
      </div>
      <div class="form-group">
        <div class="field">
          <%= f.label :téléphone %><br>
          <%= f.text_field :phone, :class => "form-control" %>
        </div>
      </div>
      <div class="form-group">
        <div class="field">
          <%= f.label :nom_gérant %><br>
          <%= f.text_field :manager_name, :class => "form-control" %>
        </div>
      </div>
      <div class="form-group">
        <div class="field">
          <%= f.label :addresse %><br>
          <%= f.text_field :address, :id => "address", :class => "form-control" %>
        </div>
      </div>
      <div class="form-group">
        <div class="field">
          <%= f.label :numéro %><br>
          <%= f.text_field :street_number, :id => "street_number", :class => "form-control" %>
        </div>
      </div>
      <div class="form-group">
        <div class="field">
          <%= f.label :rue %><br>
          <%= f.text_field :route, :id => "route", :class => "form-control" %>
        </div>
      </div>
      <div class="form-group">
        <div class="field">
          <%= f.label :ville %><br>
          <%= f.text_field :locality, :id => "locality", :class => "form-control" %>
        </div>
      </div>
      <div class="form-group">
        <div class="field">
          <%= f.label :région %><br>
          <%= f.text_field :administrative_area_level_1, :id => "administrative_area_level_1", :class => "form-control" %>
        </div>
      </div>
      <div class="form-group">
        <div class="field">
          <%= f.label :code_postal %><br>
          <%= f.text_field :postal_code, :id => "postal_code", :class => "form-control" %>
        </div>
      </div>
      <div class="form-group">
        <div class="field">
          <%= f.label :pays %><br>
          <%= f.text_field :country, :id => "country", :class => "form-control" %>
        </div>
      </div>

        <div class="form-group">
        <div class="field">
          <%= f.label :siret %><br>
          <%= f.text_field :siret, :class => "form-control" %>
        </div>
      </div>
      <div class="form-group">
        <div class="field">
          <%= f.label :image %>
          <%= f.file_field :picture %>
        </div>
      </div>
      <button type="submit" class="btn btn-default">
        <div class="actions">
          <%= f.submit %>
        </div>
      </button>
    <% end %>
  </div>
</div>
</div>

